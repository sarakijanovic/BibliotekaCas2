<Window x:Class="BibliotekaCas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotekaCas"
        mc:Ignorable="d"
        Title="Biblioteka Jovine gimnazije" Height="250" Width="700">
    <Grid>
        <Label Content="Naziv knjige" HorizontalAlignment="Left" Margin="35,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNazivKnjige" HorizontalAlignment="Left" Margin="125,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Naziv autora" HorizontalAlignment="Left" Margin="35,86,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAutor" HorizontalAlignment="Left" Margin="125,91,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="Dodaj" Click="btnDodaj_Click" Content="Dodaj" HorizontalAlignment="Left" Margin="125,189,0,0" VerticalAlignment="Top" Width="80"/>
        <DataGrid Name="dataGridCentralni" Margin="300, 20, 50, 10" AlternatingRowBackground="Bisque" VerticalAlignment="Top" AutoGenerateColumns="True" Width="auto"/>
    </Grid>
</Window>
